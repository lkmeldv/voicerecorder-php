{
    "name": "elgnani/voice-recorder",
    "description": "Simple voice recorder application with sharing capabilities",
    "type": "project",
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "": "src/"
        },
        "files": [
            "VoiceRecorderApp.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage/"
    }
}